{
	"name": "mikro-dash",
	"version": "3.1.0",
	"description": "MikroTik WiFi Management Dashboard",
	"private": true,
	"type": "module",
	"main": "electron/main.cjs",
	"scripts": {
		"dev": "vite dev --port 3000 --host",
		"build": "vite build",
		"start": "node build/index.js",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"electron:dev": "npm run build && electron .",
		"electron:build": "npm run build && electron-builder",
		"electron:build:win": "npm run build && electron-builder --win",
		"electron:build:portable": "npm run build && electron-builder --win portable",
		"tauri": "tauri",
		"tauri:dev": "tauri dev",
		"tauri:build": "tauri build",
		"build:cloudflare": "ADAPTER=cloudflare vite build",
		"pages:deploy": "bun run build:cloudflare && wrangler pages deploy .svelte-kit/cloudflare"
	},
	"build": {
		"appId": "com.mikrodash.app",
		"productName": "MikroDash",
		"electronVersion": "40.1.0",
		"directories": {
			"output": "dist-electron"
		},
		"asar": true,
		"files": [
			"build",
			"build/**/*",
			"electron",
			"electron/**/*",
			"static",
			"static/**/*",
			"package.json",
			"!**/node_modules"
		],
		"extraResources": [
			{
				"from": "data.db",
				"to": "data.db"
			},
			{
				"from": "electron-native/better-sqlite3",
				"to": "node_modules/better-sqlite3"
			},
			{
				"from": "../../node_modules/bindings",
				"to": "node_modules/bindings"
			},
			{
				"from": "../../node_modules/file-uri-to-path",
				"to": "node_modules/file-uri-to-path"
			},
			{
				"from": "../../node_modules/drizzle-orm",
				"to": "node_modules/drizzle-orm"
			},
			{
				"from": "../../node_modules/clsx",
				"to": "node_modules/clsx"
			},
			{
				"from": "../../node_modules/tailwind-merge",
				"to": "node_modules/tailwind-merge"
			},
			{
				"from": "../../node_modules/tailwind-variants",
				"to": "node_modules/tailwind-variants"
			},
			{
				"from": "../../node_modules/@sveltejs",
				"to": "node_modules/@sveltejs"
			},
			{
				"from": "../../node_modules/valibot",
				"to": "node_modules/valibot"
			},
			{
				"from": "../../node_modules/esm-env",
				"to": "node_modules/esm-env"
			},
			{
				"from": "../../node_modules/cookie",
				"to": "node_modules/cookie"
			},
			{
				"from": "../../node_modules/set-cookie-parser",
				"to": "node_modules/set-cookie-parser"
			},
			{
				"from": "../../node_modules/devalue",
				"to": "node_modules/devalue"
			},
			{
				"from": "../../node_modules/@standard-schema",
				"to": "node_modules/@standard-schema"
			}
		],
		"npmRebuild": false,
		"afterPack": "electron/afterPack.cjs",
		"win": {
			"target": [
				{
					"target": "nsis",
					"arch": [
						"x64"
					]
				}
			],
			"signAndEditExecutable": false
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true,
			"createDesktopShortcut": true,
			"createStartMenuShortcut": true
		},
		"portable": {
			"artifactName": "MikroDash-Portable.exe"
		}
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-cloudflare": "^7.0.0",
		"@sveltejs/adapter-node": "^5.5.0",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tauri-apps/cli": "^2.9.6",
		"@types/qrcode": "^1.5.6",
		"@types/better-sqlite3": "^7.6.13",
		"drizzle-kit": "^0.31.9",
		"electron": "^40.1.0",
		"electron-builder": "^26.4.0",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"typescript": "^5.9.3",
		"vite": "^7.2.6"
	},
	"dependencies": {
		"@fontsource/cairo": "^5.2.7",
		"@fontsource/ibm-plex-mono": "^5.2.7",
		"@tailwindcss/vite": "^4.1.18",
		"better-sqlite3": "^12.6.2",
		"bits-ui": "^2.15.4",
		"chart.js": "^4.5.1",
		"clsx": "^2.1.1",
		"drizzle-orm": "^0.45.1",
		"html2canvas": "^1.4.1",
		"html5-qrcode": "^2.3.8",
		"jspdf": "^4.0.0",
		"lucide-svelte": "^0.562.0",
		"qrcode": "^1.5.4",
		"svelte-chartjs": "^3.1.5",
		"svelte-sonner": "^1.0.7",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.2.2",
		"tailwindcss": "^4.1.18"
	}
}
